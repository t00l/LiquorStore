<%# add navigation links to this file %>
<% if can? :create, Store %>
	<li><a href="/stores/new" style="color:white;">Agrega un local<span class="sr-only"></span></a></li>
  <li><a href="/owners/stores" style="color:white;">Administrar locales<span class="sr-only"></span></a></li>
<%end%>

<% if owner_signed_in? %>
  <li><%= link_to current_owner.name, edit_owner_registration_path %></li>
  <li><%= link_to 'Salir', destroy_owner_session_path, method: :delete, data: { confirm: 'Seguro que deseas salir?'} %></li>
<% elsif user_signed_in?%>
  <li><%= link_to current_user.name, edit_user_registration_path %></li>
  <li><%= link_to 'Salir', destroy_user_session_path, method: :delete, data: { confirm: 'Seguro que deseas salir?'} %></li>
<%else%>
	<li><a href="#" data-reveal-id="firstModal">Inicia Sesión</a></li>
<%end%>

<!-- Empiezan los modales -->
<!-- Primer modal -->
<div id="firstModal" class="reveal-modal loginmodal" data-reveal aria-labelledby="firstModalTitle" aria-hidden="true" role="dialog">
  <div class="row">
    <div class="large-12 columns">
      <h2 id="firstModalTitle" class="text-center">Inicia Sesión</h2>
      <div class="large-6 columns">
      <p><a href="#" data-reveal-id="secondModal" class="button radius">Como Usuario</a></p>
      </div>
      <div class="large-6 columns">
      <p><a href="#" data-reveal-id="thirdModal" class="button radius">Como Dueño</a></p>
      </div>
      <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div>
  </div>
</div>

<!-- Segundo modal -->
<div id="secondModal" class="reveal-modal loginmodal" data-reveal aria-labelledby="secondModalTitle" aria-hidden="true" role="dialog">
  <%= render "shared/loginu" %>
  <p><a href="#" data-reveal-id="fifthModal loginmodal" class="text-center">¿No tienes cuenta? Regístrate ahora :)</a>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

<!-- Tercer modal -->
<div id="thirdModal" class="reveal-modal loginmodal" data-reveal aria-labelledby="thirdModalTitle" aria-hidden="true" role="dialog">
  <%= render "shared/logino" %>
  <p><a href="#" data-reveal-id="fourthModal" class="text-center">¿Tienes una botillería? Regístrate ahora :)</a></p>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

<!-- Cuarto modal -->
<div id="fourthModal" class="reveal-modal loginmodal" data-reveal aria-labelledby="fourthModalTitle" aria-hidden="true" role="dialog">
  <%= render "shared/registero" %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
<!-- Quinto modal -->

<div id="fifthModal" class="reveal-modal loginmodal" data-reveal aria-labelledby="fifthModalTitle" aria-hidden="true" role="dialog">
  <%= render "shared/registeru" %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

<script>$(document).ready(function(){
$(document).foundation();
});</script>

