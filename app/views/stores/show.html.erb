<div class="container-fluid">

  <p id="notice"><%= notice %></p>


  <div class="panel panel-default">

    <div class="container-fluid">

      <div class="row">

        <div class="col-md-4">

          <p style="padding-top:10px;">
            <strong>Nombre: </strong>
            <%= @store.name %>
          </p>

          <p>
            <strong>Dirección: </strong>
            <%= @store.address %>
          </p>

          <p>
            <strong>Horario de atención: </strong>
            <%= @store.schedule %>
          </p>
          <% if can? :update, @store %>
            <%= link_to 'Editar Botillería', edit_store_path(@store) %> 
          <%end%>
        </div>
      
        <div class="col-md-8">

          <div style='width: 800px;padding-top:10px;padding-bottom:10px;'>
            <div id="map" style='width: 800px; height: 400px;'></div>
          </div>

        </div>

      </div>

    </div>

  </div>


  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>

  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


  <script>

    handler = Gmaps.build('Google');

    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){

    markers = handler.addMarkers(<%=raw @hash.to_json %>);

      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });

  </script>

  <script>
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
  </script>

<div class="col-md-6">
  <h2 style="padding-left:10px;">Promociones</h2>
  <% if owner_signed_in? %>
    <%= render 'offers/form'%>
  <% end %>
</div>

    <br>  
<p class="text-right">
<div class="offerjs "class="col-md-6">
  <% if @offers.any?%>
    <%= render partial: 'offers/offer', collection: @offers %>
  <% else %>
      <p>Botillería sin Promociones</p>
  <% end %>
</div>

<div class="form-comments">
 <% if user_signed_in? || owner_signed_in?%>
    <%= render "comments/form" %>
  <%end%>
</div>

<div class="commentjs" class="comments">
  <% if @comments.any?%>
    <%= render partial: 'comments/comment', collection: @comments %>
  <%else%>
    <p>No hay comentarios!</p>
  <%end%>
</div>


