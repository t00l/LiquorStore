<div class="panel panel-default">
  <div class="row">
      <div class="col-md-6">
        <h2>Promociones</h2>
        <%= render 'offers/form'%>
      </div>

      <br>
      <p class="text-right">
        <div class="col-md-6">
          <table class="table">
          <tr>
            <% @store.offers.each do |p| %>
            <th><%= p.name %></th> 
            <th><%= p.price %></th>
          </tr>
          </table>
        </div>
      </p>
      <% end %>
  </div>
</div>

