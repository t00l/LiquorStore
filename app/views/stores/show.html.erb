  <ul>
  <% for store in @store.nearbys(10) %>
    <li><%= link_to store.address, store %> (<%= store.distance.round(2) %> kilometros)</li>
  <% end %>
  </ul>

  <%= link_to 'Edit', edit_store_path(@store) %> |
  <%= link_to 'Back', stores_path %>
    
</div>
